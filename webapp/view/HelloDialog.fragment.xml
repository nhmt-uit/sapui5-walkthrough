<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core" >
    <Dialog
        id="helloDialog"
        title="Hello {/recipient/name}">
        <content>
            <core:Icon
                src="sap-icon://hello-world"
                size="8rem"
                class="sapUiMediumMargin"/>
            <Button
                text="Click here to know the truth"
                press=".onClickShowName"/>
        </content>
        <beginButton>
        <Button
            text="{i18n>dialogCloseButtonText}"
            press=".onCloseDialog"/>
      </beginButton>
    </Dialog>
</core:FragmentDefinition>